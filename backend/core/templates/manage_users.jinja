{% extends "base.jinja" %}

{% block heading %}
    Manage Users
{% endblock %}

{% block content %}
    <h2>User List</h2>

    <table border="1" cellpadding="5" cellspacing="0">
        <thead>
            <tr>
                <th>Email</th>
                <th>Is Admin</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.email }}</td>
                    <td>{{ 'Yes' if user.is_admin else 'No' }}</td>
                    <td>
                        {% if current_user.id != user.id %}
                            <form method="POST" style="display:inline;" onsubmit="return confirmDelete('{{ user.email }}')">
                                <input type="hidden" name="action" value="remove_user">
                                <input type="hidden" name="user_id" value="{{ user.id }}">
                                <button type="submit">Remove</button>
                            </form>
                        {% else %}
                            (Cannot remove self)
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    
    <hr/>
    
    <form method="POST">
        <h3>Add User</h3>
        <input type="hidden" name="action" value="add_user">
        <label for="email">Email:</label><br/>
        <input type="email" name="email" id="email" required><br>
        <br>
        <label for="password">Password:</label><br/>
        <input type="password" name="password" id="password" required><br>
        <br>
        <label for="is_admin">Is Admin:</label>
        <select name="is_admin" id="is_admin">
            <option value="false">No</option>
            <option value="true">Yes</option>
        </select><br/>
        <br>
        <button type="submit">Add User</button>
    </form>

    <script>
        function confirmDelete(userEmail) {
            return confirm("Are you sure you want to remove user " + userEmail + "? This action cannot be undone and will REMOVE ALL GPS DATA associated with this user.");
        }
    </script>
{% endblock %}
